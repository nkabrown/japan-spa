<head>

	<script>
	$(document).ready(function(){
		$("#noboribetsu_dot").mouseenter(function(){
			$("#noboribetsu_popup").show();
		});
		$("#noboribetsu_popup").mouseenter(function(){
			$(this).show();
		});
		$("#noboribetsu_dot").mouseleave(function(){
			$("#noboribetsu_popup").hide();
		});
		$("#noboribetsu_popup").mouseleave(function(){
			$(this).hide();
		});
	});
	</script>

</head>

<body>
	<div id="map_page">
		<div id="map_image"></div>
		
		<div>

			<div class="map_popup" id="noboribetsu_popup">
				<a href="http://www.noboribetsu-spa.jp/?page_id=1797&lang=en" target="_blank"><img class="map_image" id="noboribetsu_onsen" src="/images/noboribetsu_onsen.jpg"/>
				<p class="popup_text"><u>Noboribetsu Onsen</u></a> <br> <span class="description">Acid Springs</span></p>
			</div>

			<div class="dot" id="noboribetsu_dot">
				<p class="map_text">Noboribetsu</p>
			</div>

		</div>

		<div class="dot" id="akita_dot">
			<p class="map_text">Akita</p>
		</div>

		<div class="dot" id="gunma_dot">
			<p class="map_text">Gunma</p>
		</div>

		<div class="dot" id="tokyo_dot">
			<p class="map_text">Tokyo</p>
		</div>

		<div class="dot" id="kanagawa_dot">
			<p class="map_text">Kanagawa</p>
		</div>

		<div class="dot" id="kyoto_dot">
			<p class="map_text">Kyoto</p>
		</div>

		<div class="dot" id="oita_dot">
			<p class="map_text">Oita</p>
		</div>

	</div>
</body>